<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
              android:orientation="vertical"
                tools:context="com.ingada.beaconhackaton.OfferDetailActivity" android:gravity="center_vertical|center_horizontal">


    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView" android:layout_gravity="center_horizontal">
        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                android:orientation="vertical" android:gravity="center_horizontal">
            <TextView
                    android:text="@string/hello_world"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/activity_offer_description"
                    android:textAppearance="?android:attr/textAppearanceLarge"/>
            <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="As a developer you  will focus on development of in-memory data cube technology. Your responsibilities would also include delivery of new functionality as well as support of existing systems using industry best practices to  deliver business value. The role also includes discussion of requirements, design and testing issues with the business project team. "
                    android:id="@+id/textView2" android:layout_below="@+id/activity_offer_title"
                    android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\nRequirements:\n \n-Very good Java skills with an emphasis on server side components with strong object oriented design skills; as one of the lead developers OLAP related skills such as MDX would be essential\n-Practical experience using core Java development platforms, messaging systems, test frameworks and build and deploy technology (our client currently uses ActiveMQ, Spring, Maven and Junit so knowledge in these or similar technologies is key)\n-Development experience in Investment Banking, Front Office, Algorithmic Trading, Foreign Exchange Market, Data or Market Risk\n-Very good verbal and written communication skills"
                android:id="@+id/textView4"
                android:layout_gravity="center_horizontal" />

            <Button

                    android:text="Apply with App"
                    android:id="@+id/activity_offer_button"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:background="@drawable/button_shape"
                    android:shadowColor="#A8A8A8"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="5"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"/>
            <Button
                    android:layout_width="160dp"
                    android:layout_height="35dp"
                    android:width="200dp"

                    android:background="@drawable/linkedin_button"

                    android:id="@+id/activity_offer_ln_button" android:layout_gravity="center_horizontal"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
